@model IEnumerable<Employee>
@{
    ViewData["Title"] = "Index";
}<div>
    <a asp-controller="Employee" asp-action="Create" class="btn btn-primary">Nuevo</a>
</div>

 
     <div class="card-deck">
         @foreach (var employee in Model)
         {
             var photoPath = "~/images/" + (employee.PhotoPath ?? "noimage.jpg");
             <div class="card m-3" style="min-width: 18rem; max-width:30.5%;">
                 <div class="card-header">
                     <h3>@employee.Name</h3>
                 </div>

                 <img class="card-img-top imageThumbnail" src="@photoPath"
                      asp-append-version="true" />

                 <div class="card-footer text-center">

                     <a asp-action="Detail" asp-route-id="@employee.Id" class="btn btn-primary">Ver</a>
                     <a asp-action="Edit" asp-route-id="@employee.Id" class="btn btn-success">Editar</a>
                     <a asp-action="Delete" asp-route-id="@employee.Id" class="btn btn-danger">Borrar</a>
                     @*@Html.ActionLink("Totales", "Total", new { dept = employee.Department })*@

                 </div>
             </div>
         }
     </div>
     @section Scripts{
        


     }


