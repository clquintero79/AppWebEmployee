@model IEnumerable<Employee>
@{
    ViewData["Title"] = "Index";
}

<h1>@ViewData["Mensaje"]</h1>
<a asp-controller="Employee" asp-action="Create" class="btn btn-primary">Nuevo</a>
<table>
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Department</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model)
        {
        <tr>
            <td>
                @employee.Id
            </td>
            <td>
                @employee.Name
            </td>
            <td>
                @employee.Department
            </td>
            <td>
                <a asp-action="Detail" asp-route-id="@employee.Id" class="btn btn-success"><i class="fas fa-user-edit"></i></a>
            </td>
            <td>
                <a asp-action="Delete" asp-route-id="@employee.Id" class="btn btn-danger"><i class="far fa-trash-alt"></i></a>
            </td>
            <td>
                @Html.ActionLink("Totales", "Total", new { dept = employee.Department })
                @*<a asp-action="Total" asp-all-route-data="@employee.Department" class="btn btn-warning"><i class="fas fa-list-alt"></i></a>*@
            </td>
        </tr>
        }
    </tbody>
</table>